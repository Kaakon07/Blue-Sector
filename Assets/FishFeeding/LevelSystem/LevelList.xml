<?xml version="1.0" encoding="UTF-8"?>
<levels xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:noNamespaceSchemaLocation="LevelList.xsd">
    <!-- Arcade mode levels (easier difficulty, lower thresholds, more gameified) -->
    <arcadelevels>                      
        <level>                         <!-- A generic level --> 
            <tutorial>true</tutorial>   <!-- Is this level a tutorial? -->
            <threshold>0.1</threshold>  <!-- How low is feed% before failing -->
            <unlock>0</unlock>          <!-- Score to unlock next level -->
            <modifier>0.0</modifier>    <!-- Modifier for difficulty level in case certain levels should be extra hard-->
            <prev>false</prev>          <!-- Does there exist a level before this one? -->
            <next>true</next>           <!-- Does there exist a level after this one? -->
            <beaten>false</beaten>      <!-- Has the player beaten the level?-->
        </level>
    </arcadelevels>

    <!-- Realism mode levels (harder difficulty, higher thresholds, more detail) -->
    <realismlevels>
        <level>
            <tutorial>true</tutorial>
            <threshold>0.1</threshold>
            <unlock>0</unlock>
            <modifier>0.0</modifier>
            <prev>false</prev>
            <next>true</next>
            <beaten>false</beaten>
        </level>
    </realismlevels>
</levels>